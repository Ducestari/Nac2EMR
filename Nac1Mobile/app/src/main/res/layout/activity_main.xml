<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/webview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageAmericanas "
        android:layout_width="201dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ushds" />

    <ImageButton
        android:id="@+id/ImageMercadoLivre"
        android:layout_width="206dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/sudhd" />

    <ImageButton
        android:id="@+id/ImageWebMotors"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/download" />

    <ImageButton
        android:id="@+id/ImageEbay"
        android:layout_width="203dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@mipmap/sasaisja" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="201dp"
        android:layout_height="29dp"
        android:layout_marginBottom="11dp"
        android:text="Lojas Americanas "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ImageWebMotors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAmericanas " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="207dp"
        android:layout_height="30dp"
        android:layout_marginBottom="13dp"
        android:text="Mercado Livre"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ImageEbay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageMercadoLivre" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginBottom="283dp"
        android:text="Web Motors"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageWebMotors" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="203dp"
        android:layout_height="40dp"
        android:layout_marginBottom="282dp"
        android:text="Ebay"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageEbay" />

    <Button
        android:id="@+id/buttonSobre"
        android:layout_width="138dp"
        android:layout_height="84dp"
        android:layout_marginBottom="64dp"
        android:text="Sobre"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>